pipeline
{
    agent any
    stages{
        stage('Build'){
        	steps{
        		
        	    sh 'mvn clean' 
        	}  
        }
        stage('Start Docker'){
        	steps{
        	    sh 'docker-compose up -d'
        	}
        }
        stage('Increase instances of Chrome'){
        	steps{
                sh 'docker-compose scale chrome=6'
            }
        }
        stage('Test'){
        	steps{
        	    sh 'mvn test'
        	}
        }
        stage('Stop Docker'){
            steps{
                sh 'docker-compose down'
            }

        }

    }

}
